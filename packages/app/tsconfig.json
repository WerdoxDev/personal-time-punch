{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"types": ["unplugin-icons/types/react", "vite/client"],
		"jsx": "react-jsx",

		"paths": {
			"@stores/*": ["./src/stores/*"],
			"@components/*": ["./src/components/*"],
			"@contexts/*": ["./src/contexts/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@lib/*": ["./src/lib/*"],
			"@/*": ["./src/*"]
		},
		"rootDirs": ["."]
	},
	"include": ["src", "auto-imports.d.ts", "electron", "src/index.d.ts"]
}
