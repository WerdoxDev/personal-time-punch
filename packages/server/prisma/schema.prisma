generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt @id
  username  String @unique
  firstName String
  lastName  String
  email     String @unique
  password  String
  works     Work[]
}

model Work {
  id          BigInt    @id
  user        User      @relation(fields: [userId], references: [id])
  userId      BigInt
  timeOfEntry DateTime
  timeOfExit  DateTime?
  type        Int       @default(0)
}
